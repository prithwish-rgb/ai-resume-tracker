{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* TypeScript Behavior */
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* React/Next.js */
    "jsx": "preserve",
    "incremental": true,

    /* Paths */
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Suppress future deprecation warnings */
    "ignoreDeprecations": "5.0",

    /* Plugins (Next.js specific) */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
